@model MathСalculator.WebUI.Models.ChordModel
@{
    ViewBag.Title = "Метод секущих";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

<h1 class="firstHeading" style="font-weight: normal; margin: 0px 0px 0.1em; padding-top: 0.5em; padding-bottom: 0.17em; border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: rgb(170, 170, 170); font-size: 23.8759994506836px; font-family: sans-serif; line-height: 19.0499992370605px; text-align: center; background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;">Метод секущих</h1>

<p style="margin: 0.4em 0px 0.5em; line-height: 19.0499992370605px; font-family: sans-serif; font-size: 12.6999998092651px; background-color: rgb(255, 255, 255);">Пусть задана функция&nbsp;<img alt="f(x)" src="http://www.machinelearning.ru/mimetex/?f(x)" style="border: none; vertical-align: middle; margin: 0px;" />&nbsp;действительного переменного. Требуется найти корни уравнения</p>



<dl style="margin-top: 0.2em; margin-bottom: 0.5em; font-family: sans-serif; font-size: 12.6999998092651px; line-height: 19.0499992370605px; background-color: rgb(255, 255, 255);">
    <dd style="line-height: 1.5em; margin-left: 2em; margin-bottom: 0.1em;">
        <dl style="margin-top: 0.2em; margin-bottom: 0.5em;">
            <dd><img alt="f(x)=0." src="http://www.machinelearning.ru/mimetex/?f(x)=0." style="border: none; vertical-align: middle;" /></dd>
        </dl>
    </dd>
</dl>

<p style="margin: 0.4em 0px 0.5em; line-height: 19.0499992370605px; font-family: sans-serif; font-size: 12.6999998092651px; background-color: rgb(255, 255, 255);">Задача нахождения корней уравнения&nbsp;<a href="http://www.machinelearning.ru/wiki/index.php?title=%D0%9C%D0%B5%D1%82%D0%BE%D0%B4_%D1%81%D0%B5%D0%BA%D1%83%D1%89%D0%B8%D1%85#eq:1" style="text-decoration: none; color: rgb(90, 54, 150); background: none;" title="">(1)</a>&nbsp;обычно решается в 2 этапа. На первом этапе проводится отделение корней, то есть выделение отрезков, содержащих только один корень. На втором этапе, используя начальное приближение, строится итерационный процесс, позволяющий уточнить значение отыскиваемого корня.</p>

<p><a name=".D0.98.D0.B7.D0.BB.D0.BE.D0.B6.D0.B5.D0.BD.D0.B8.D0.B5_.D0.BC.D0.B5.D1.82.D0.BE.D0.B4.D0.B0" style="color: rgb(0, 43, 184); font-family: sans-serif; font-size: 12.6999998092651px; line-height: 19.0499992370605px; background-image: none; background-color: rgb(255, 255, 255); background-size: initial; background-position: initial; background-repeat: initial;"></a></p>
<h2 class="myh2"><strong>Решение</strong></h2>

<hr />

<div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    Пример ввода операторов и функций:
    <br />
    +, -, *, /, ^, %
    <br />
    sqrt, sin, cos, tan, atan, acos, asin, acotan, exp, ln, log, sinh, cosh, tanh, abs, ceil, floor, fac, sfac, round, fpart
    <br />
    !, ==, !=, ||, &&, >, < , >=, <=
    <br />
    Константы
    <br />
    PI (value of System.Math.PI),
    Euler (value of System.Math.E) true (1.0),
    false (0.0),
    infinity (value of Double.PositiveInfinity),
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Введите начальные данные</h3>
        <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
    </div>
    <div class="panel-body">
        <center>
            @using (Html.BeginForm("Secants", "Iteration", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <p class="texterror">
                    @Html.ValidationSummary(true, "Вы что-то сделали не так. Возможные проблемы: ")
                </p>
                 @Html.Label("Введите уравнение")
  <br />
                                @Html.TextBoxFor(x => x.Equation, new { @placeholder= "f(x) = 0" })
                                <br />
                @Html.LabelFor(x => x.Fuctions)
                <br />

                @Html.TextBoxFor(x => x.Fuctions, new { @placeholder = "x = f(x)" })
                <br />
                @Html.Label("Введите eps")
                <br />
                @Html.TextBoxFor(x => x.Epsilon, new { @placeholder = "0,00001" })
                <br />
                @Html.Label("Введите начальное приближение х0")
                <br />
                @Html.TextBoxFor(x => x.X0)
                <br />

                @Html.Label("Введите начальное приближение х1")
                <br />
                @Html.TextBoxFor(x => x.X0)
                <br />
                <br />

                <div>
                    <input type="submit" class="btn btn-primary" value="Решить" />
                </div>
            }
        </center>
    </div>
    <div class="panel-footer">
        @Html.LabelFor(x => x.Result)
        @Html.TextBoxFor(x => x.Result)

        @if (User.Identity.IsAuthenticated)
        {
               @Html.ActionLink("Скачать решение в .doc", "GetFile", new { path = "Secants.doc" })
    <a style="margin-left: 20px;" href="@ViewBag.Adress" target="_blank">Проверить решение</a>
        }
    </div>
</div>



