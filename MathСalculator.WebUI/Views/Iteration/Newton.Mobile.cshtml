@model MathСalculator.WebUI.Models.SimpleIterationModel
@{
    ViewBag.Title = "Метод Ньютона";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}



@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}

<h1 class="firstHeading" id="firstHeading" lang="ru" style="font-weight: normal; margin: 0px 0px 0.25em; overflow: visible; padding: 0px; border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: rgb(170, 170, 170); font-size: 1.8em; line-height: 1.3; font-family: 'Linux Libertine', Georgia, Times, serif; text-align: center; background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;">Метод Ньютона</h1>

<div class="mw-body-content" id="bodyContent" style="position: relative; line-height: 1.6; font-size: 0.875em; z-index: 0; color: rgb(37, 37, 37); font-family: sans-serif;">
    &nbsp;
    <div class="mw-content-ltr" dir="ltr" id="mw-content-text" lang="ru" style="direction: ltr;">
        <p style="margin: 0.5em 0px; line-height: inherit;"><b>Метод Ньютона</b>&nbsp;&mdash; это итерационный&nbsp;<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/%D0%A7%D0%B8%D1%81%D0%BB%D0%B5%D0%BD%D0%BD%D1%8B%D0%B5_%D0%BC%D0%B5%D1%82%D0%BE%D0%B4%D1%8B" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Численные методы">численный метод</a>&nbsp;нахождения корня (<a href="https://ru.wikipedia.org/wiki/%D0%9D%D1%83%D0%BB%D1%8C_%D1%84%D1%83%D0%BD%D0%BA%D1%86%D0%B8%D0%B8" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Нуль функции">нуля</a>) заданной&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%A4%D1%83%D0%BD%D0%BA%D1%86%D0%B8%D1%8F_(%D0%BC%D0%B0%D1%82%D0%B5%D0%BC%D0%B0%D1%82%D0%B8%D0%BA%D0%B0)" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Функция (математика)">функции</a>. Метод был впервые предложен английским&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%A4%D0%B8%D0%B7%D0%B8%D0%BA" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Физик">физиком</a>,&nbsp;<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/%D0%9C%D0%B0%D1%82%D0%B5%D0%BC%D0%B0%D1%82%D0%B8%D0%BA" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Математик">математиком</a>&nbsp;и&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%90%D1%81%D1%82%D1%80%D0%BE%D0%BD%D0%BE%D0%BC" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Астроном">астрономом</a>&nbsp;
            Исааком Ньютоном
        &nbsp;(<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/1643" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="1643">1643</a>&mdash;<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/1727" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="1727">1727</a>). Поиск решения осуществляется путём построения последовательных приближений и основан на принципах&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%9C%D0%B5%D1%82%D0%BE%D0%B4_%D0%BF%D1%80%D0%BE%D1%81%D1%82%D0%BE%D0%B9_%D0%B8%D1%82%D0%B5%D1%80%D0%B0%D1%86%D0%B8%D0%B8" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Метод простой итерации">простой итерации</a>. Метод обладает квадратичной&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%A1%D0%BA%D0%BE%D1%80%D0%BE%D1%81%D1%82%D1%8C_%D1%81%D1%85%D0%BE%D0%B4%D0%B8%D0%BC%D0%BE%D1%81%D1%82%D0%B8" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Скорость сходимости">сходимостью</a>. Улучшением метода является&nbsp;<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/%D0%9C%D0%B5%D1%82%D0%BE%D0%B4_%D1%85%D0%BE%D1%80%D0%B4_%D0%B8_%D0%BA%D0%B0%D1%81%D0%B0%D1%82%D0%B5%D0%BB%D1%8C%D0%BD%D1%8B%D1%85" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Метод хорд и касательных">метод хорд и касательных</a>. Также метод Ньютона может быть использован для решения&nbsp;<a class="mw-redirect" href="https://ru.wikipedia.org/wiki/%D0%97%D0%B0%D0%B4%D0%B0%D1%87%D0%B0_%D0%BE%D0%BF%D1%82%D0%B8%D0%BC%D0%B8%D0%B7%D0%B0%D1%86%D0%B8%D0%B8" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Задача оптимизации">задач оптимизации</a>, в которых требуется определить нуль первой&nbsp;<a href="https://ru.wikipedia.org/wiki/%D0%9F%D1%80%D0%BE%D0%B8%D0%B7%D0%B2%D0%BE%D0%B4%D0%BD%D0%B0%D1%8F_%D1%84%D1%83%D0%BD%D0%BA%D1%86%D0%B8%D0%B8" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Производная функции">производной</a>&nbsp;либо<a href="https://ru.wikipedia.org/wiki/%D0%93%D1%80%D0%B0%D0%B4%D0%B8%D0%B5%D0%BD%D1%82" style="text-decoration: none; color: rgb(11, 0, 128); background-image: none; background-attachment: initial; background-size: initial; background-origin: initial; background-clip: initial; background-position: initial; background-repeat: initial;" title="Градиент">градиента</a>&nbsp;в случае многомерного пространства.</p>

      </div>
</div>

<h2 class="myh2"><strong>Решение</strong></h2>

<hr />

<div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    Пример ввода операторов и функций:
    <br />
    +, -, *, /, ^, %
    <br />
    sqrt, sin, cos, tan, atan, acos, asin, acotan, exp, ln, log, sinh, cosh, tanh, abs, ceil, floor, fac, sfac, round, fpart
    <br />
    !, ==, !=, ||, &&, >, < , >=, <=
    <br />
    Константы
    <br />
    PI (value of System.Math.PI),
    Euler (value of System.Math.E) true (1.0),
    false (0.0),
    infinity (value of Double.PositiveInfinity),
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Введите начальные данные</h3>
        <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
    </div>
    <div class="panel-body">
        <center>
            @using (Html.BeginForm("Newton", "Iteration", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                   <p class="texterror">
                    @Html.ValidationSummary(true, "Вы что-то сделали не так. Возможные проблемы: ")
            </p>
                    @Html.Label("Введите уравнение")
  <br />
                                @Html.TextBoxFor(x => x.equation, new { @placeholder= "f(x) = 0" })
                                <br />
                @Html.LabelFor(x => x.Fuctions)
                <br />

                @Html.TextBoxFor(x => x.Fuctions, new { @placeholder = "x = f(x)" })
                <br />
                @Html.Label("Введите eps")
                <br />
                @Html.TextBoxFor(x => x.Epsilon,new { @placeholder = "0,00001" })
                <br />
                @Html.Label("Введите начальное приближение х0")
                <br />
                @Html.TextBoxFor(x => x.X0, new { @placeholder = "0" })
                <br />
                <br />

                <div>
                    <input type="submit" class="btn btn-primary" value="Решить" />
                </div>
            }
        </center>
    </div>
    <div class="panel-footer">
        @Html.LabelFor(x => x.Result)
        @Html.TextBoxFor(x => x.Result)

        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Скачать решение в .doc", "GetFile", new { path = "Newton.doc" })
    <a style="margin-left: 20px;" href="@ViewBag.Adress" target="_blank">Проверить решение</a>
        }
    </div>
</div>

